<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2434140"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/tvNameOfGame"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/fiftheen_game"
        android:textColor="#BA9D10"
        android:textSize="47sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bStart"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/start_button"
        android:layout_marginTop="120dp"
        android:onClick="onStart"
        android:textSize="24sp"
        app:backgroundTint="#BA9D10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameOfGamer" />

    <Button
        android:id="@+id/bExit"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textSize="24sp"
        android:layout_margin="8dp"
        android:onClick="onExit"
        android:text="@string/exit_button"
        app:backgroundTint="#FFBA9D10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bStart" />

    <EditText
        android:id="@+id/etNameOfGamer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="85dp"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#BA9D10"
        android:textColorHint="#A8BA9D10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameOfGame" />
</androidx.constraintlayout.widget.ConstraintLayout>